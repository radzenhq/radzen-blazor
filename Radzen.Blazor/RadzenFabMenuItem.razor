@inherits RadzenComponent

@if (ChildContent == null)
{
    <RadzenButton Text="@Text"
                  Icon="@Icon"
                  IconColor="@IconColor"
                  Image="@Image"
                  ButtonStyle="@ButtonStyle"
                  ButtonType="@ButtonType"
                  Variant="@Variant"
                  Shade="@Shade"
                  Size="@Size"
                  Disabled="@Disabled"
                  Click="OnClickProxy"
                  style="@Style"
                  @attributes="Attributes" />
}
else
{
    <RadzenButton ButtonStyle="@ButtonStyle"
                  ButtonType="@ButtonType"
                  Variant="@Variant"
                  Shade="@Shade"
                  Size="@Size"
                  Disabled="@Disabled"
                  Click="OnClickProxy"
                  style="@Style"
                  @attributes="Attributes">
        @ChildContent
    </RadzenButton>
} 