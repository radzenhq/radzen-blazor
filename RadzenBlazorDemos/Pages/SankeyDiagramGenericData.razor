        new CustomFlowData { FromLocation = "Warehouse B", FromLabel = "Distribution Center B", ToLocation = "Store 1", ToLabel = "Retail Store #1", Amount = 100 },
        new CustomFlowData { FromLocation = "Warehouse B", FromLabel = "Distribution Center B", ToLocation = "Store 3", ToLabel = "Retail Store #3", Amount = 175 },
        new CustomFlowData { FromLocation = "Store 1", FromLabel = "Retail Store #1", ToLocation = "Customer", ToLabel = "End Customers", Amount = 180 },
        new CustomFlowData { FromLocation = "Store 2", FromLabel = "Retail Store #2", ToLocation = "Customer", ToLabel = "End Customers", Amount = 160 },
        new CustomFlowData { FromLocation = "Store 3", FromLabel = "Retail Store #3", ToLocation = "Customer", ToLabel = "End Customers", Amount = 140 },
        new CustomFlowData { FromLocation = "Store 1", FromLabel = "Retail Store #1", ToLocation = "Returns", ToLabel = "Product Returns", Amount = 70 },
        new CustomFlowData { FromLocation = "Store 2", FromLabel = "Retail Store #2", ToLocation = "Returns", ToLabel = "Product Returns", Amount = 40 },
        new CustomFlowData { FromLocation = "Store 3", FromLabel = "Retail Store #3", ToLocation = "Returns", ToLabel = "Product Returns", Amount = 35 }
