    {
        public string FromLocation { get; set; }
        public string ToLocation { get; set; }
        public double Amount { get; set; }
        public string FromLabel { get; set; }
        public string ToLabel { get; set; }
    }
    
    private List<CustomFlowData> customFlows = new List<CustomFlowData>
    {
        new CustomFlowData { FromLocation = "Warehouse A", FromLabel = "Distribution Center A", ToLocation = "Store 1", ToLabel = "Retail Store #1", Amount = 150 },
