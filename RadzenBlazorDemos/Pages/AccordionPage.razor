<RadzenText TextStyle="TextStyle.Body1" class="rz-mb-8">
    The following keys or key combinations provide a way for users to navigate and interact with Radzen Blazor Accordion component.
</RadzenText>

<KeyboardNavigationDataGrid Data="@shortcuts" />

@code {
    public List<KeyboardShortcut> shortcuts = new()
    {
        new KeyboardShortcut { Key = "Tab", Action = "Navigate to an Accordion." },
        new KeyboardShortcut { Key = "DownArrow", Action = "Focus next Accordion item." },
        new KeyboardShortcut { Key = "UpArrow", Action = "Focus previous Accordion item." },
        new KeyboardShortcut { Key = "Space or Enter", Action = "Change the state of a focused Accordion item switching between expanded and collapsed." }
    };
}
