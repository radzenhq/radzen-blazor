<RadzenSpiderChart TItem="ProductData" Style="width: 100%; height: 500px;">
    <RadzenSpiderLegend Visible="true" Position="LegendPosition.Right" />
    <RadzenSpiderSeries TItem="ProductData" 
                        Data="@GetProductAData()" 
                        CategoryProperty="@nameof(ProductData.Feature)" 
                        ValueProperty="@nameof(ProductData.Score)"
                        Title="Product A" />
    <RadzenSpiderSeries TItem="ProductData" 
                        Data="@GetProductBData()" 
                        CategoryProperty="@nameof(ProductData.Feature)" 
                        ValueProperty="@nameof(ProductData.Score)"
                        Title="Product B" />
    <RadzenSpiderSeries TItem="ProductData" 
                        Data="@GetProductCData()" 
                        CategoryProperty="@nameof(ProductData.Feature)" 
                        ValueProperty="@nameof(ProductData.Score)"
                        Title="Product C" />
</RadzenSpiderChart>

@code {
    class ProductData
    {
        public string Feature { get; set; }
        public double Score { get; set; }
    }

    IEnumerable<ProductData> GetProductAData()
    {
        return new ProductData[]
        {
