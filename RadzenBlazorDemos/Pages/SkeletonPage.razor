</RadzenExample>

<RadzenText Anchor="skeleton#animations" TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-pt-12">
    Animations
</RadzenText>
<RadzenText TextStyle="TextStyle.Body1" class="rz-mb-8">
