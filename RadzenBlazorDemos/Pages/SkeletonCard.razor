@using Radzen

<div class="rz-p-12">
    <RadzenRow Gap="2rem">
        <RadzenColumn Size="4">
            <RadzenCard Style="height: 250px;">
                <RadzenStack Orientation="Orientation.Vertical" Gap="1rem">
                    <RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" AlignItems="AlignItems.Center">
                        <RadzenSkeleton Type="SkeletonType.Circular" Style="width: 50px; height: 50px;" />
                        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
                            <RadzenSkeleton Type="SkeletonType.Text" Style="width: 120px; height: 16px;" />
                            <RadzenSkeleton Type="SkeletonType.Text" Style="width: 80px; height: 14px;" />
                        </RadzenStack>
                    </RadzenStack>
                    
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 100%; height: 14px;" />
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 90%; height: 14px;" />
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 70%; height: 14px;" />
                    
                    <RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" class="rz-mt-auto">
                        <RadzenSkeleton Type="SkeletonType.Rounded" Style="width: 80px; height: 32px;" />
                        <RadzenSkeleton Type="SkeletonType.Rounded" Style="width: 80px; height: 32px;" />
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
        
        <RadzenColumn Size="4">
            <RadzenCard Style="height: 250px;">
                <RadzenStack Orientation="Orientation.Vertical" Gap="1rem">
                    <RadzenSkeleton Type="SkeletonType.Rectangular" Style="width: 100%; height: 80px;" />
                    
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 100%; height: 16px;" />
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 80%; height: 14px;" />
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 60%; height: 14px;" />
                    
                    <RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" class="rz-mt-auto">
                        <RadzenSkeleton Type="SkeletonType.Circular" Style="width: 24px; height: 24px;" />
                        <RadzenSkeleton Type="SkeletonType.Circular" Style="width: 24px; height: 24px;" />
                        <RadzenSkeleton Type="SkeletonType.Circular" Style="width: 24px; height: 24px;" />
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
        
        <RadzenColumn Size="4">
            <RadzenCard Style="height: 250px;">
                <RadzenStack Orientation="Orientation.Vertical" Gap="1rem">
                    <RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" AlignItems="AlignItems.Center">
                        <RadzenSkeleton Type="SkeletonType.Rounded" Style="width: 60px; height: 60px;" />
                        <RadzenStack Orientation="Orientation.Vertical" Gap="0.5rem">
                            <RadzenSkeleton Type="SkeletonType.Text" Style="width: 100px; height: 16px;" />
                            <RadzenSkeleton Type="SkeletonType.Text" Style="width: 60px; height: 14px;" />
                        </RadzenStack>
                    </RadzenStack>
                    
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 100%; height: 14px;" />
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 85%; height: 14px;" />
                    <RadzenSkeleton Type="SkeletonType.Text" Style="width: 75%; height: 14px;" />
                    
                    <RadzenStack Orientation="Orientation.Horizontal" Gap="1rem" class="rz-mt-auto">
                        <RadzenSkeleton Type="SkeletonType.Rectangular" Style="width: 100px; height: 32px;" />
                        <RadzenSkeleton Type="SkeletonType.Rectangular" Style="width: 60px; height: 32px;" />
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>
</div> 