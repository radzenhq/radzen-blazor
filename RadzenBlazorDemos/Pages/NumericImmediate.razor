<div class="rz-p-12 rz-text-align-center">
    <RadzenNumeric @bind-Value=@value TValue="int?" Min="10" Max="100" Change=@(value => OnChange(value)) Immediate="true" InputAttributes="@(new Dictionary<string, object>() { { "aria-label", "enter value" } })" />
    <EventConsole @ref="console" />
</div>

@code {
    int? value;
    EventConsole console;

    void OnChange(int? value)
    {
        console.Log($"value changed to {value?.ToString() ?? "null"}");
    }
}