<RadzenText Anchor="numeric#formatted-value" TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-pt-8">
    Formatted value
</RadzenText>
<RadzenText TextStyle="TextStyle.Body1" class="rz-mb-8">
