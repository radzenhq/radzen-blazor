<RadzenText Anchor="numeric#custom-value-convert" TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-pt-8">
    Custom Value convert
</RadzenText>
<RadzenText TextStyle="TextStyle.Body1" class="rz-mb-8">
