<RadzenText Anchor="numeric#align-value" TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-pt-8">
    Align value
</RadzenText>
<RadzenText TextStyle="TextStyle.Body1" class="rz-mb-8">
